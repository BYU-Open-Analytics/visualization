<?php

if ($ltiContext->valid) {
	?>
	<h4 class="info">Showing <?php echo count($statements); ?> statements</h4>
	<table class="table table-striped">
	<tr><th>Actor Name</th><th>Verb</th><th>Object</th><th>Timestamp</th></tr>
	<?php
	foreach ($statements as $statement) {
		echo "<tr><td>{$statement->actor->name}</td><td>{$statement->verb->display->{'en-US'}}</td><td>{$statement->object->definition->name->{'en-US'}}</td><td>{$statement->timestamp}</td></tr>";
	}
	echo "</table>";
	echo $this->tag->linkTo("ltiinfo", "View LTI session info");
	echo "<br />";
	echo $this->tag->linkTo("logout", "Log out");

} else {
	echo "Not logged in, or there was an LTI error.";
}
